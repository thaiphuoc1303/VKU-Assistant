<?xml version="1.1" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:layout_marginBottom="20dp"
        android:textColor="#19FF00"
        android:text="Thêm lịch học"
        />
    <EditText
        android:id="@+id/hocphan"
        android:background="@drawable/edittextselector"
        android:paddingLeft="20dp"
        android:hint="Học phần"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
    />
    <EditText
        android:id="@+id/phong"
        android:background="@drawable/edittextselector"
        android:paddingLeft="20dp"
        android:hint="Phòng"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thời gian:"
        android:textSize="16dp"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Spinner
            android:background="@drawable/edittextselector"
            android:paddingLeft="5dp"
            android:id="@+id/spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/thoigian"
            android:background="@drawable/edittextselector"
            android:paddingLeft="20dp"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:editable="false"
            android:hint="Giờ bắt đầu" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Học bù(Tự xóa sau khi học xong)"
        android:layout_margin="20dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <Button
            android:id="@+id/btnclose"
            android:theme="@style/Theme.btnRed"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="Đóng"/>
        <Button
            android:id="@+id/btn3"
            android:theme="@style/Theme.btnGreen"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Thêm"
            />

    </LinearLayout>

</LinearLayout>